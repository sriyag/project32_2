<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAM_APP_STUDENT_VERSION"
        android:id="@+id/title_text"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:id="@+id/tvStudentName"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="25sp"
        android:id="@+id/etStudentName"
        android:layout_below="@+id/title_text"
        android:layout_alignBottom="@+id/tvStudentName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:id="@+id/tvStudentID"
        android:layout_below="@+id/etStudentName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etStudentID"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/tvStudentID"
        android:layout_alignLeft="@+id/etStudentName"
        android:layout_alignStart="@+id/etStudentName"
        android:layout_alignRight="@+id/etStudentName"
        android:layout_alignEnd="@+id/etStudentName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next_button"
        android:layout_below="@+id/etStudentID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
